generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Environment {
  development
  production
  preview
}

enum FeedbackType {
  problem
  suggestion
}

model Room {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
}

model Feedback {
  id          String       @id @default(uuid())
  description String       @db.Text
  environment Environment
  type        FeedbackType
  created_at  DateTime     @default(now())
}
